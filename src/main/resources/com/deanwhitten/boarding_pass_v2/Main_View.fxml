       <ColumnConstraints hgrow="SOMETIMES" maxWidth="235.0" minWidth="10.0" prefWidth="84.0" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="199.0" minWidth="10.0" prefWidth="64.0" />
         <ColumnConstraints hgrow="SOMETIMES" maxWidth="427.0" minWidth="10.0" prefWidth="392.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
         <Button fx:id="yes_btn" mnemonicParsing="false" onAction="#onYesClick" prefHeight="25.0" prefWidth="34.0" text="Yes" GridPane.columnIndex="1" />
         <Button fx:id="no_btn" mnemonicParsing="false" onAction="#onNoClick" text="No" GridPane.columnIndex="2" />
      </children>
   </GridPane>
